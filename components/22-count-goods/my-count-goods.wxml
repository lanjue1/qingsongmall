<!--components/22-count-goods/my-count-goods.wxml-->
<view class="count-goods">
  <view class="goods-icon">

    <my-check-icon bindtap='onCheckClick'  data-index="{{index}}"  
    isChecked="{{goods.checked}}"/>
  </view>

  <view class="goods-image">
    <image src="{{goods.image}}" mode="widthFix" class="image"></image>
  </view>   

  <view class="goods-info">
      <view class="title">{{goods.title}}</view>
      <view class="desc">{{goods.desc}}</view>
      <view class="price-count">
          <view class="price">{{goods.price}}</view>
          <view>{{goods.count}}</view>
      </view>
  </view>             
</view>
