.total-title{
  margin: 26rpx 18rpx;

}
.title{
  color:rgb(156, 151, 151);

  font-size: 16px;
}
.price{
  display: flex;
  
  margin:10rpx 0 30rpx 20rpx;
}
.price-new{
  font-size: 38rpx;
  color: #ff5777;
  font-weight: bold;

}
.price-old{
  margin: 0 10px 0 14px;
  text-decoration: line-through;
  font-size: 26rpx;
}
.price-desc{
  background-color: #fd5f7c;
  color: white;
  border-radius: 8px;
  position: relative;
  bottom: 12rpx;
  font-size: 24rpx;
  border: 4px solid #fd5f7c;
}



.columns{
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 2px solid rgb(226, 225, 225);
}
.columns-item{
  
  color:rgb(156, 151, 151);
  font-size: 28rpx;
  
}
.services{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 50rpx 0;
  border-bottom: 6px solid #eee;
  position: relative
}
.services-after image{
  width: 24rpx;
  height: 24rpx;
}
.services-after text{
 color:rgb(156, 151, 151);
  font-size: 28rpx;
}