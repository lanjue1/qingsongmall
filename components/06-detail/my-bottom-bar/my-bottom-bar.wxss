.bottomBar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  font-size: 30rpx;
  color: #777777;
  display: flex;
  background-color: white;
  z-index: 20;
  box-shadow: 0 -1px 1.5px rgba(100, 100, 100, .2);
  
}
.bar-left image{
  width: 40rpx;
  height: 40rpx;
}
.bar-item{
  flex: 1;
  display: flex;
}
.bar-left,bar-right{
  flex: 1;  
 text-align: center  
}
