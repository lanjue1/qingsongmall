/* components/06-detail/my-store-store/my-store-store.wxss */
.store{
  margin-top: 20rpx ;
  padding: 50rpx 20rpx;
  border-top:  6px solid #eee;
}
.storeName{
  position: relative;
}
.storeName image{
  width: 100rpx;
  height: 100rpx;
  
  border: 2px solid #eee;
  border-radius: 100%;

}
.storeName text{
  font-size: 40rpx;
  color: #777;
  text-align: center;
  position: absolute;
  bottom: 40rpx;
  padding-left: 20rpx;
}
.store-center{
  display: flex;
  margin: 30rpx 0;
}

.store-center{
  color: #777;
  height: 130rpx;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}
.center-left{
  flex: 1;
  text-align: center;
  border-right: 1px solid #eee;
  display: flex;
  
}
.center-left text{
  font-size: 40rpx;
  text-align: center;
  
}
.center-left view{
  margin-top: 20rpx;
}
.cSells,.cGoods{
  flex: 1;
}
.center-right{
  width: 50%;
  text-align: center;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.score-item{
  flex: 1;
  align-items:center;
  display: flex;

}
.score-item .name{
  width: 200rpx;

}
.score,.better{
  flex: 1;
}
.red{
  color: #ff5777
}
.green{
  color: #89D04A;
}

.button{
  width: 150px;
  background-color:rgba(248, 248, 248, .2);
  font-size: 28rpx;
  border: 1px solid #ff5777;
  
}